# Dreamex Email Service - Production Environment Configuration
# Copy this file to .env and update with your actual production credentials

# PRODUCTION SMTP Configuration (privateemail.com)
SMTP_HOST=mail.privateemail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=info@dreamexdatalab.com
SMTP_PASS=Im@m1409pP

# Production Email Settings
FROM_EMAIL=info@dreamexdatalab.com
FROM_NAME=Dreamex Datalab HSE System
REPLY_TO=info@dreamexdatalab.com

# Production Server Configuration
PORT=3001
NODE_ENV=production

# Production Security Settings
ALLOWED_ORIGINS=http://localhost:5500,https://dreamexdatalab.github.io,file://,http://localhost:3000,http://localhost:8080
API_KEY=dreemex_hse_email_service_2025

# Production Rate Limiting (emails per hour)
EMAIL_RATE_LIMIT=1000

# Production Monitoring & Logging
LOG_LEVEL=info
ENABLE_EMAIL_LOGGING=true
EMAIL_LOG_PATH=./logs/email.log

# Production Error Handling
RETRY_ATTEMPTS=3
RETRY_DELAY=5000
CIRCUIT_BREAKER_THRESHOLD=10

# Production Performance Settings
CONNECTION_POOL_SIZE=5
MAX_MESSAGES_PER_CONNECTION=100
CONNECTION_TIMEOUT=30000
SOCKET_TIMEOUT=30000

# Production Backup SMTP (Optional - for failover)
BACKUP_SMTP_HOST=smtp.gmail.com
BACKUP_SMTP_PORT=587
BACKUP_SMTP_USER=your_backup_email@gmail.com
BACKUP_SMTP_PASS=your_backup_app_password

# Health Check Settings
HEALTH_CHECK_INTERVAL=300000
SMTP_HEALTH_CHECK_EMAIL=health@dreamexdatalab.com

# Production SSL/TLS Settings
TLS_MIN_VERSION=TLSv1.2
TLS_CIPHERS=HIGH:!aNULL:!eNULL:!EXPORT:!DES:!MD5:!PSK:!SRP:!CAMELLIA

# Email Queue Settings (for high volume)
ENABLE_EMAIL_QUEUE=true
QUEUE_CONCURRENCY=5
QUEUE_DELAY=1000

# Production Metrics
ENABLE_METRICS=true
METRICS_PORT=3002
