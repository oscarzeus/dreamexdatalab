{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "scheduledReports": {
      "$reportType": {
        "$companyId": {
          ".indexOn": ["status", "startOn", "lastSent"]
        }
      }
    },
    "reports": {
      "$reportType": {
        "$companyId": {
          ".indexOn": ["timestamp", "generatedAt"]
        }
      }
    }
  }
}
